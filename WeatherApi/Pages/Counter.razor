@page "/counter"
@using MudBlazor

<PageTitle>Counter</PageTitle>

<MudContainer>
    <MudGrid>
        <MudItem xs="12">
            <MudText Typo="Typo.h4">Counter</MudText>
            <MudText role="status">Current count: @currentCount</MudText>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" @onclick="IncrementCount">Click me</MudButton>
        </MudItem>
    </MudGrid>
</MudContainer>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
